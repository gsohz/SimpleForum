<h1>Lista de perguntas</h1>
<hr>
{{!-- Add new question button --}}
<a href="/pergunta"><button class='btn btn-success'>Nova pergunta</button></a>

{{!-- Show questions list --}}
{{#each questions}}
{{!-- Card --}}

<div class="card mt-4">
  {{!-- Card body --}}
  <div class="card-body">
    {{!-- Card title line --}}
    <div class="d-flex flex-row bd-highlight mt-1">

      {{!-- Title --}}
      <div class="p-1 flex-grow-1 bd-highlight">
        <h4>{{title}}</h4>
      </div>

      {{#if user}}
<p>dadwdw</p>
      {{/if}}

      {{!-- Delete button --}}
      <div class="d-flex align-items-end flex-column">
        <form action="/lista/deletar-pergunta" method="post">
        <input type="hidden" name="idQuestion" value="{{_id}}">
        {{#compare author ../user ../accountType}}
        <button type="submit" class="btn btn-danger">Deletar</button>
        {{/compare}}
        </form>
      </div>

    </div>

    {{!-- Category --}}
    <div class="px-2 flex-grow-1">
      <small class="text-muted">Categoria: {{category.name}}</small>
    </div>

    {{!-- Author --}}
    <div class="px-2 flex-grow-1">
      <small class="text-muted">Criado por: {{author}}</small>
    </div>

    {{!-- Question date --}}
    <div class="px-2 flex-grow-1">
      <small class="text-muted">Data: {{#formatDate date}}{{/formatDate}}</small>
    </div>

    {{!-- Division line --}}
    <hr>

    {{!-- Question content --}}
    <p>{{limitContent questionContent}}</p>

    {{!-- See question button --}}
    <div>
      <a href="/pergunta/{{slug}}" type="button"  class="btn btn-primary btn-sm">Ver pergunta</a>
    </div>

  </div>
</div>

{{!-- In case there is no questions --}}
{{else}}

<h4 class="mt-3">Nenhuma pergunta registrada... Fa√ßa sua pergunta!</h4>
{{/each}}

<div class="pagination pagination-centered">
{{#each page}}
                {{../page}}dsada
{{/each}}   

{{#each pageCount}}
                {{pageCount}}
                dada
{{/each}}

</div>