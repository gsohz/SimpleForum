{{#each userData}}
<div class="d-flex flex-row bd-highlight mt-1">
<div class="flex-grow-1 bd-highlight">
Apelido: {{nickName}}
<br>
Nome: {{name}}
<br>
Email: {{email}}
</div>


<div class="d-flex align-items-end flex-column">
  <a class="btn btn-success link" href="/editar-nome/{{nickName}}">Editar</a>
</div>

</div>
{{/each}}
<h2>Perguntas do usuário</h2>
{{#each question}}
<div class="card mt-4">
  <div class="card-body">

    <div class="d-flex flex-row bd-highlight mt-1">

      {{!-- Title --}}
      <div class="p-1 flex-grow-1 bd-highlight">
        <h4>{{title}}</h4>
      </div>

      {{!-- Delete button --}}
      <div class="d-flex align-items-end flex-column">
        <form action="/lista/deletar-pergunta" method="post">
        <input type="hidden" name="idQuestion" value="{{_id}}">
        <button type="submit" class="btn btn-danger">Deletar</button>
        </form>
      </div>

    </div>


    <p>{{limitContent questionContent}}</p>
      <div>
      <a href="/pergunta/{{slug}}" type="button"  class="btn btn-primary btn-sm">Ver pergunta</a>
      </div>
  </div>
</div>
{{/each}}

{{#unless question}}
    <div class="empty">
      <p>Nenhuma pergunta até agora...</p>
    </div>
{{/unless}}

<br>
<hr>
<br>
<h2>Respostas do usuário</h2>
{{#each answer}}
<div class="card mt-4">
  <div class="card-body">

    <div class="d-flex flex-row bd-highlight mt-1">

      {{!-- Title --}}
      <div class="p-1 flex-grow-1 bd-highlight">
        <p>{{limitContent answerContent}}</p>
      </div>

      {{!-- Delete button --}}
      <div class="d-flex align-items-end flex-column">
        <form action="/deletar-resposta" method="post">
        <input type="hidden" name="idAnswer" value="{{_id}}">
        <button type="submit" class="btn btn-danger">Deletar</button>
        </form>
      </div>

    </div>
    
    <div>
          
      <a href="/pergunta/{{questionSlug}}" type="button"  class="btn btn-primary btn-sm">Ver pergunta</a>


      
      
    </div>
  </div>
</div>
{{/each}}

{{#unless answer}}
    <div class="empty">
      <p>Nenhuma resposta até agora...</p>
    </div>
{{/unless}}